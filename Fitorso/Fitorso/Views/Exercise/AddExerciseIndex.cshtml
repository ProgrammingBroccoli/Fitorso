@model Fitorso.Viewmodels.ExerciseViewmodel
<table class="table table-striped table-hover ">
    <tr>
        <th>Exercise</th>
        <th>Musclegroup</th>
        <th>Description</th>
    </tr>
    @foreach (var item in Model.Exercises)
    {

        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @Model.Musclegroups.SingleOrDefault(m => m.Id == item.MusclegroupId).Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @Html.ActionLink("Add to Favorite", "AddFavorite", "Exercise", new {exerciseId = item.Id, UserId = Model.User.Id}, null)
            </td>
        </tr>
    }

</table>
